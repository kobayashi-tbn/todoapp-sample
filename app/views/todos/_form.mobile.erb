    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%#= f.label :limit_on %><br />
    <%#= f.date_select :limit_on, {use_month_numbers: true, order: [:year, :month, :day]} %>
  </div>
  <div class="field">
    <%= f.label :limit_on %><br />
    <%= f.text_field :limit_on, id: 'scroller', readonly: 'readonly' %>
  </div>
  <div class="field">
    <%= f.label :done %><br />
    <%= f.check_box :done %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
