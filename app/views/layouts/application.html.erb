<!DOCTYPE html>
<html>
<head>
  <title>Todoapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
<div id="custom-dialog"></div>

<% if current_user %>
    <div class="sign-out">
    <%= link_to I18n.t('.sign_out'), destroy_user_session_path, :method => 'delete',message: I18n.t('.are_you_sure?'), data: {confirm: 'Are you sure?'} %>
    </div>
<% end %>
<p class="notice" id="notice"><%=notice%></p>
<p class="alert"><%=alert%></p>
<%= yield %>

<div class="ua-type">
<%= link_to 'Mobile', {mobile: 1}, data: {ajax: false} %>
</div>
</div>
</body>
</html>
