<!DOCTYPE html>
<html>
<head>
  <title>Todoapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    <div class="sign_out">
    <%= link_to I18n.t('.sign_out'), destroy_user_session_path, :method => 'delete' %>
    </div>
<% end %>
<p class="notice" id="notice"><%=notice%></p>
<p class="alert"><%=alert%></p>
<%= yield %>

</body>
</html>
